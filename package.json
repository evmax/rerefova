{
  "scripts": {
    "build": "browserify src/main.js -o dist/main.js",
    "watch": "npm-watch"
  },
  "watch": {
    "build": "src/*.{js,jsx}"
  },
  "browserify": {
    "transform": [
      "babelify",
      ["envify", {"global": true}],
      ["uglifyify", {"sourcemap": false, "global": true}]
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.13.2",
    "babel-preset-react": "^6.11.1",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "envify": "^3.4.1",
    "npm-watch": "^0.1.6",
    "ramda": "^0.22.1",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "redux": "^3.5.2",
    "uglifyify": "^3.0.2",
    "validate.js": "^0.10.0"
  }
}
